<%- include("../layout/adminLayout/header.ejs") %>
    <main id="main" class="main">
        <div class="row row-cols-1 row-cols-md-3 g-4 mt-3 mb-5 w-100 px-5">

         


            <table class="table table-dark table-striped text-center">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Edit Details</th>
                        <th scope="col">Edit images</th>
                        <th scope="col">Delete</th>

                    </tr>
                </thead>
                <tbody>
                    <% products.forEach((product, i)=> { %>
                        <tr>
                            <td class="align-middle">
                                <%= i + 1 %>
                            </td>
                            <td class="align-middle">
                                <img src="<%= product.image[0].url %>" alt="Product Image" style="height: 75px; width: 50px; object-fit: cover;">
                            </td>
                            
                            
                            <td class="align-middle">
                                <%= product.name %>
                            </td>
                            <td class="align-middle">
                                <%= product.category %>
                            </td>
                            <td class="align-middle">
                                <%= product.price %>
                            </td>
                            <td class="align-middle">
                                <%= product.quantity %>
                            </td>
                            <td class="align-middle">
                                <div class="">
                                    <a href="/admin/editproduct?id=<%= product._id %>"> <button type="submit"
                                            class="btn btn-warning">Edit Details</button></a>

                                </div>
                            </td>
                            <td class="align-middle">
                                <div class="">
                                    <a href="/admin/editProductImages?id=<%= product._id %>"> <button type="submit"
                                            class="btn btn-warning">Edit images</button></a>

                                </div>
                            </td>
                            <td class="align-middle">  <a href="#"
                                onclick="deleteProduct('<%= product._id %>','<%= product.isActive %>')">
                    
                                    <button type="button"
                                        class="btn btn-<%= product.isActive ? 'danger' : 'warning' %>">
                                        <% if(product.isActive) { %>Delete<% } else { %>Undo<% } %>
                                    </button></a></td>
                        </tr>
                        <% }) %>
                </tbody>

            </table>


        </div>

    </main>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
          function deleteProduct(productId, isActive) {
  if (isActive === 'true') {
    Swal.fire({
      title: 'Are you sure you want to delete?',
      text: "You won't be able to revert this!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
      if (result.isConfirmed) {
        
        // Delete the product
        window.location.href = `/admin/product/delete?id=${productId}&active=${isActive}`;
        
      }
    });
  } else {
    Swal.fire({
      title: 'Would you like to activate this product?',
      text: 'You can reactivate the product later if needed.',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, activate it!'
    }).then((result) => {
      if (result.isConfirmed) {
        // Activate the product
        window.location.href = `/admin/product/delete?id=${productId}&active=${isActive}`;
      }
    });
  }
}

        </script>

