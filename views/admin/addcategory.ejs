<%-include("../layout/adminLayout/header.ejs") %>
<main id="main" class="main">
    <div class="container p-3 mb-5 rounded col-lg-8 col-8 mt-5" style="background-color: black;">
        <form action="/admin/addcategory" method="post" id="form1" enctype="multipart/form-data">
            <div class="container bg-white p-4 mb-4">
                <div class="form-outline mb-4">
                    <label class="form-label" for="name">Category Name</label>
                    <div class="input-group form-outline mb-4">
                        <input type="text" id="name" name="name" class="form-control" required />
                    </div>
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="image">Category Image</label>
                    <div class="input-group form-outline mb-4">
                        <input type="file" id="image" name="images" class="form-control" required />
                    </div>
                </div>
            </div>

            <% if (message) { %>
            <p style="color: red; text-align: center">
                <%= message %>
            </p>
            <% } %>

            <!-- Submit button -->
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-block mb-4 col-lg-3" style="background-color: #FFD333">
                    Create
                </button>
            </div>
        </form>
    </div>
</main>
<%- include("../layout/adminLayout/footer.ejs") %>
