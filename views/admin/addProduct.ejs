<%-include("../layout/adminLayout/header.ejs") %>
    <main id="main" class="main">
        <style>
            .container {
                max-width: 800px;
                margin: 0 auto;
                padding: 20px;
                background-color: black;
                color: goldenrod;
                border-radius: 20px;
            }
    
            h1 {
                text-align: center;
                margin-bottom: 20px;
            }
    
            .form-group {
                margin-bottom: 20px;
            }
    
            .form-group input[type="text"],
            .form-group input[type="number"],
            .form-group textarea {
                width: 100%;
            }
    
            .form-group-inline {
                display: flex;
                justify-content: space-between;
            }
    
            .form-group-inline .form-group {
                width: 48%;
            }
    
            .form-group-inline .form-group:last-child {
                margin-left: 2%;
            }
    
            .form-group-description {
                width: 100%;
            }
    
            .btn-center {
                display: flex;
                justify-content: center;
                margin-top: 20px;
            }
    
            .btn-primary {
                background-color: goldenrod;
                color: black;
                border: none;
            }
    
            .btn-primary:hover {
                background-color: goldenrod;
                color: black;
            }
        </style>
    </head>
    
    <body>
        <div class="container">
            <h1>Add Product</h1>
            <hr>
            <form action="" method=""  id="addProductForm" enctype="multipart/form-data" >
                <div class="form-group-inline">
                    <div class="form-group">
                        <label for="images">Product Images:</label>
                        <input type="file" class="form-control" id="images" name="images" multiple required>
                    </div>
                    <div class="form-group">
                        <label for="name">Product Name:</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                </div>
    
                <div class="form-group-inline">
                    <div class="form-group">
                        <label for="price">Price:</label>
                        <input type="number" class="form-control" id="price" name="price" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="quantity">Quantity:</label>
                        <input type="number" class="form-control" id="quantity" name="quantity" min="0" required>
                    </div>
                </div>
    
                <div class="form-group-inline">
                    <div class="form-group">
                        <label for="color">Color:</label>
                        <input type="text" class="form-control" id="color" name="color" required>
                    </div>
                    <div class="form-group">
                        <label for="brand">Brand:</label>
                        <input type="text" class="form-control" id="brand" name="brand" required>
                    </div>
                </div>
                <div class="form-group-inline">
                    <div class="form-group">
                    <label for="category">Category:</label>
                    <select class="form-select" id="category" name="category" required>
                       
                            <option >laptop</option>	
                            <option >mobiles</option>	
                            <option >Audio Devices</option>	
                        
                       
                    </select>
                </div>
                    <div class="form-group">
                        <label for="images">Cover Image:</label>
                        <input type="file" class="form-control" id="coverimage" name="coverimage"  required>
                    </div>
                </div>
    
                <div class="form-group">
                    <label for="blurb">Blurb:</label>
                    <textarea class="form-control" id="blurb" name="blurb" required></textarea>
                </div>
    
                <div class="form-group">
                    <label for="specifications">Specifications:</label>
                    <textarea class="form-control" id="specifications" name="specification" required></textarea>
                </div>
    
                <div class="form-group form-group-description">
                    <label for="description">Description:</label>
                    <textarea class="form-control" id="description" name="description" required></textarea>
                </div>
    
                <p class="text-center"><%=message%></p>
                <div class="btn-center">
                    <button type="submit" class="btn btn-primary">Add Product</button>
                </div>
            </form>
        </div>
    </main>
      
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fetch@3.6.2/dist/fetch.min.js"></script>
    <script>
        document.getElementById('addProductForm').addEventListener('submit', function(event) {
          event.preventDefault();
      
          // Get form data
          const formData = new FormData(event.target);
      
          // Show loading alert
          Swal.fire({
            title: 'Adding Product...',
            allowOutsideClick: false,
            showConfirmButton: false,
            onBeforeOpen: () => {
              Swal.showLoading();
            }
          });
      
          // Perform AJAX request
          fetch('/admin/addproduct', {
            method: 'POST',
            body: formData
          })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              // Show success message
              Swal.fire({
                icon: 'success',
                title: 'Product Added Successfully!',
                showConfirmButton: false,
                timer: 1500
              });
      
              // Redirect to the add product page after success message
              setTimeout(() => {
                window.location.href = '/admin/addproduct';
              }, 1500);
            } else {
              // Handle any error if needed
              Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Failed to add product. Please try again later.'
              });
            }
          })
          .catch(error => {
            // Handle error if needed
            Swal.fire({
              icon: 'error',
              title: 'Error',
              text: 'An unexpected error occurred. Please try again later.'
            });
          });
        });
      </script>
      

    <%- include("../layout/adminLayout/footer.ejs") %>