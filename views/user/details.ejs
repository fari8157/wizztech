    <script>

function addToWishlist(id){
            console.log(id);

            $.ajax({
                type: "GET",
                url: "/addToWishlist",
                data: {
                    productId: id,
                },
                success: function(res){
                    $.get(location.href, function(data){
                        $("#wishlist").html($(data).find("#wishlist").html());
                        $("#wishlist-icon").html($(data).find("#wishlist-icon").html());
                    })
                }
            })
        }

        function notLogin(){
            Swal.fire({
                icon: "warning",
                title: "You Are Not Login",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Login",
            }).then((result)=>{
                if(result.isConfirmed){
                    const currentUrl = location.href;
                    location.href= `/login?url=${currentUrl}`
                }
            })
        }
       
        function addToClick(id){
            
            console.log("hai",id);
            axios.get(`/addCart?productId=${id}`)
            .then((result)=>{
                console.log(result);
                if(result.data.response){
                    let x = document.getElementById("snackbar");
                    x.className = "show";
                    setTimeout(function(){ x.className = x.className.replace("show", ""); }, 3000);       
                }else{
                    let x = document.getElementById("snackbar-error");
                    x.className = "show";
                    setTimeout(function(){ x.className = x.className.replace("show", ""); }, 3000);
                }
                
            })
                
        }
        function showPopup() {
      Swal.fire({
        title: 'Please Login',
        text: 'You need to login to add items to the cart.',
        icon: 'warning',
        confirmButtonText: 'Login',
        cancelButtonText: 'Cancel',
        showCancelButton: true,
        customClass: {
          confirmButton: 'swal-confirm-button',
          cancelButton: 'swal-cancel-button'
        }
      }).then((result) => {
        if (result.isConfirmed) {
          // Redirect the user to the login page
          window.location.href = '/login'; // Replace '/login' with your login page URL
        }
      });
    }



    </script>


