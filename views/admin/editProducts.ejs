<%-include("../layout/adminLayout/header.ejs") %>
    <main id="main" class="main">
        <style>
            .container {
                max-width: 800px;
                margin: 0 auto;
                padding: 20px;
                background-color: black;
                color: goldenrod;
                border-radius: 20px;
            }
    
            h1 {
                text-align: center;
                margin-bottom: 20px;
            }
    
            .form-group {
                margin-bottom: 20px;
            }
    
            .form-group input[type="text"],
            .form-group input[type="number"],
            .form-group textarea {
                width: 100%;
            }
    
            .form-group-inline {
                display: flex;
                justify-content: space-between;
            }
    
            .form-group-inline .form-group {
                width: 48%;
            }
    
            .form-group-inline .form-group:last-child {
                margin-left: 2%;
            }
    
            .form-group-description {
                width: 100%;
            }
    
            .btn-center {
                display: flex;
                justify-content: center;
                margin-top: 20px;
            }
    
            .btn-primary {
                background-color: goldenrod;
                color: black;
                border: none;
            }
    
            .btn-primary:hover {
                background-color: goldenrod;
                color: black;
            }
        </style>
    </head>
    
    <body>
        <div class="container">
            <h1>Edit Product</h1>
            <hr>
            <form action="/admin/editproduct?id=<%= Data._id %>" method="POST" enctype="multipart/form-data">
                <div class=>
                    <label for="name">Product Name:</label>
                    <input type="text" class="form-control" id="name" name="name" required   value="<%=Data.name%>">
                   
                </div>
    
                <div class="form-group-inline">
                    <div class="form-group">
                        <label for="price">Price:</label>
                        <input type="number" class="form-control" id="price" name="price" min="0" required   value="<%=Data.price%>">
                    </div>
                    <div class="form-group">
                        <label for="quantity">Quantity:</label>
                        <input type="number" class="form-control" id="quantity" name="quantity" min="0" required  value="<%=Data.quantity%>">
                    </div>
                </div>
    
                <div class="form-group-inline">
                    <div class="form-group">
                        <label for="color">Color:</label>
                        <input type="text" class="form-control" id="color" name="color" required value="<%=Data.color%>">
                    </div>
                    <div class="form-group">
                        <label for="brand">Brand:</label>
                        <input type="text" class="form-control" id="brand" name="brand" required value="<%=Data.brand%>">
                    </div>
                </div>
    
                <div class="form-group">
                    <label for="category">Category:</label>
                    <input type="text" class="form-control" id="category" name="category" required value="<%=Data.category%>">
                </div>
    
                <div class="form-group">
                    <label for="blurb">Blurb:</label>
                    <textarea class="form-control" id="blurb" name="blurb" required > <%=Data.blurb %></textarea>
                </div>
    
                <div class="form-group">
                    <label for="specifications">Specifications:</label>
                    <textarea class="form-control" id="specifications" name="specification" required> <%=Data.specifications%></textarea>
                </div>
    
                <div class="form-group form-group-description">
                    <label for="description">Description:</label>
                    <textarea class="form-control" id="description" name="description" required > <%=Data.description%></textarea>
                </div>
    
                <div class="btn-center">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>
            </form>
        </div>
    </main>
      

    <%- include("../layout/adminLayout/footer.ejs") %>