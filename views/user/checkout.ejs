    <script>
        $(document).ready(function () {
            // $('input:radio').change(function () {//Clicking input radio
            //     var radioClicked = $(this).attr('id');
            //     unclickRadio();
            //     removeActive();
            //     clickRadio(radioClicked);
            //     makeActive(radioClicked);
            // });
            $(".paymentx").click(function () {//Clicking the card
                var inputElement = $(this).find('input[type=radio]').attr('id');
                // var paymentOption= $(this).find('input[type=radio]').attr('value');
                console.log(inputElement);
                btnShow();
                unclickRadio();
                removeActive();
                makeActive(inputElement);
                clickRadio(inputElement);
            });
        });

        function btnShow() {
            $("#address-btn").css("display", "block");
        }

        function unclickRadio() {
            $("input:radio").prop("checked", false);
        }

        function clickRadio(inputElement) {
            $("#" + inputElement).prop("checked", true);
        }

        function removeActive() {
            $(".card").removeClass("active");
        }

        function makeActive(element) {
            $("#" + element + "-card").addClass("active");
        }


const couponForm = document.getElementById('couponForm');

couponForm.addEventListener('submit',(e)=>{
    e.preventDefault();

    const coupon = document.getElementById('couponName');
    const addressId = document.getElementById('addressId');
    console.log(coupon);
    console.log(addressId);
    axios({
        method: "post",
        url: "/checkout/couponApply",
        data: {
            couponName: coupon.value,
            addressId: addressId.value,
            cartPrice: '<%= cart.cartPrice %>'
        }
    })
    .then((result)=>{
        console.log(result);
        if(result.data.response == false){
            Swal.fire({
            icon: "warning",
            title: "Invalid coupon",
            })
            document.querySelector('.couponShow').innerHTML= `$${0}`;
            document.querySelector('.couponShow').removeAttribute("id");
            document.getElementById('totalprice').innerHTML= `$${'<%= cart.cartPrice.toFixed(2) %>'}`;
        }else if(result.data.response == "min"){

            Swal.fire({
                icon: "warning",
                title: "You can't apply this coupon",
            })

        }else{
            
            document.querySelector('.couponShow').innerHTML= `$${result.data.coupon.discount}`;
            document.querySelector('.couponShow').setAttribute("id",result.data.coupon._id);
            document.getElementById('totalprice').innerHTML= `$${('<%= cart.cartPrice %>'- result.data.coupon.discount).toFixed(2)}`;
        }
    })
})


function handleOnlinePayment(){
            const payment = document.querySelector('input[name="payment"]:checked').value;
            const addressId = document.getElementById('addressId').value;
            const couponId = document.querySelector('.couponShow').id;


            $.ajax({
                url: "/razorpay",
                type: "POST",
                data: {
                    coupon: couponId
                },
                success: function(res){
                    if(res.success){
                        var options = {
                            "key": ""+res.key_id+"",
                            "amount": ""+res.amount+"",
                            "amount": "INR",
                            "name": "WIZZTECH",
                            "image": "https://dummyimage.com/",
                            "order_id": ""+res.order_id+"",
                            "handler": function(response){

                                axios({
                                    method: "post",
                                    url: '/checkout',
                                    data: {
                                        payment: payment,
                                        address: addressId,
                                        payment_id: response.razorpay_payment_id,
                                        coupon: couponId,
                                    }
                                })
                                .then((result)=>{
                                    if(result.data.response){
                                        location.href=`/order/success?orderId=${result.data.orderId}`;
                                    }
                                })

                            },
                            "prefill": {
                                "name": ""+res.name+"",
                                "email": ""+res.email+""
                            },
                            "theme": {
                                "color": "#e0a80d"
                            }
                        };
                        var razorpayObject = new Razorpay(options);
                        razorpayObject.on('payment.failed', function (response){
                                alert("Payment Failed");
                        });
                        razorpayObject.open();
                    }
                }
            })

            
            

        }

function placeorder(){
            const payment = document.querySelector('input[name="payment"]:checked').value;
            const addressId = document.getElementById('addressId').value;
            const couponId = document.querySelector('.couponShow').id;

            if(payment=="online"){

                handleOnlinePayment();
                
            }else{
                axios({
                method: "post",
                url: '/checkout',
                data: {
                    payment: payment,
                    address: addressId,
                    coupon: couponId,
                }
                
                })
                .then((result)=>{
                    if(result.data.response){
                        location.href=`/order/success?orderId=${result.data.orderId}`;
                    }
                })
            }
            
        }

    </script>








